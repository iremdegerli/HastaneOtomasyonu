@model HastaneOtomasyonu.Models.Randevu
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_RandevuLayout.cshtml";
}
<style>
	input {
		display: block;
		width: 80%;
		height: 30px;
		margin-top: 1.0em;
		padding: 4px;
	}

	.login-box {
		padding: 1em 1em 1em 1em;
		margin: auto;
		text-align: center;
		display: block;
		background-color: #6f92dc;
		/*border: 1px dashed white;*/
		width: 60%;
		height: auto;
	}

	.outer-box {
		display: block;
		margin: auto;
		background: #6f92dc;
		border-radius: 5px;
		width: 50%;
		height: 20em;
		height: auto;
	}

	#btn-login {
		display: block;
		width: 100%;
		height: 40px;
		margin-top: 2.0em;
		border-radius: 4px;
		background-color: #d9155c;
		color: #fff;
	}
</style>
<div class="outer-box">
	<div class="login-box">
		<center>
			<form action="/Randevu/Index" method="post">
				<div class="form-group" style="color:floralwhite;">
					<label for="tc">Hasta TC</label>
					<input type="number" asp-for="Tc" required>
				</div>

				<div class="form-group" style="color:floralwhite;">
					<label>Hasta Ad</label>
					<input type="text" asp-for="HastalarAd" required>
				</div>
				<div class="form-group" style="color:floralwhite;">
					<label>Hasta Soyad</label>
					<input type="text" asp-for="HastalarSoyad" required>
				</div>
				<div class="form-group" style="color:floralwhite;">
					<label>Doktor Ad</label>
					<input type="text" asp-for="DoktorlarAd" required>
				</div>
				<div class="form-group" style="color:floralwhite;">
					<label>Doktor Soyad</label>
					<input type="text" asp-for="DoktorlarSoyad" required>
				</div>
				<div class="form-group" style="color:floralwhite;">
					<label>Randevu Tarihi</label>
					<input type="date" asp-for="RandevuTarih" required>
				</div>
				<div class="form-group" style="color:floralwhite;">
					<label>Randevu Saati</label>
					<input type="time" asp-for="RandevuSaati" required>
				</div>
				<button id="btn-login" type="submit">Randevu Oluştur</button>

				<script>
					function validateForm() {
						var tc = document.getElementById("Tc").value;
						var hastaAd = document.getElementById("HastalarAd").value;
						var hastaSoyad = document.getElementById("HastalarSoyad").value;
						var doktorAd = document.getElementById("DoktorlarAd").value;
						var doktorSoyad = document.getElementById("DoktorlarSoyad").value;
						var tarih = document.getElementById("RandevuTarihi").value;
						var saat = document.getElementById("RandevuSaat").value;

						if (tc === "" || hastaAd === "" || hastaSoyad === "" || doktorAd === "" || doktorSoyad === "" || tarih === "" || saat === "") 
						{
							document.getElementById("error-message").innerHTML = "Lütfen tüm alanları doldurun.";
							return false;
						}

						if (tc==0) {
							document.getElementById("error-message").innerHTML = "Tc 0 olamaz";
							return false;
						}

						return true;
					}
				</script>
			</form>
		</center>
	</div>
</div>