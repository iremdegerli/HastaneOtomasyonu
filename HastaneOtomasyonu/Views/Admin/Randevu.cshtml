@model List<HastaneOtomasyonu.Models.Randevu>
@{
    ViewData["Title"] = "Randevu";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}


<div id="page-wrapper">
    <div class="main-page">
         <h3 class="title1">Tüm Doktorlar</h3> 
        <div class="blank-page widget-shadow scroll" id="style-2 div1">
            <section class="section_container booking_container">
                <div class="booking__nav">
                    <span>Doktor Bilgileri</span>
                </div>
                <style>
                    table {
                        border-collapse: collapse;
                        width: 100%;
                        margin-top: 20px;
                    }

                    th, td {
                        border: 1px solid #dddddd;
                        text-align: left;
                        padding: 12px;
                    }

                    th {
                        background-color: #EF9BFC;
                        color: white;
                        font-weight: bold;
                    }

                    tr:nth-child(even) {
                        background-color: #f2f2f2;
                    }

                    tr:hover {
                        background-color: #e0e0e0;
                    }
                </style>
                <table>
                    <thead>
                        <tr>
                            <th>Randevu No</th>
                            <th>Hasta Tc</th>
                            <th>Hasta Adı</th>
                            <th>Hasta Soyadı</th>
                            <th>Doktor Adı</th>
                            <th>Doktor Soyadı</th>
                            <th>Randevu Tarihi</th>
                            <th>Randevu Saati</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var randevu in Model)
                            {
                                <tr>
                                    <td>@randevu.RandevuId</td>
                                    <td>@randevu.Tc</td>
                                    <td>@randevu.HastalarAd</td>
                                    <td>@randevu.HastalarSoyad</td>
                                    <td>@randevu.DoktorlarAd</td>
                                    <td>@randevu.DoktorlarSoyad</td>
                                    <td>@randevu.RandevuTarih</td>
                                    <td>@randevu.RandevuSaati</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </section>
        </div>
    </div>
</div>

