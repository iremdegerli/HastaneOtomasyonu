@model List<HastaneOtomasyonu.Models.Hastalar>
@{
    ViewData["Title"] = "Hastalar";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div id="page-wrapper">
	<div class="main-page">
		<h3 class="title1">Tüm Hastalar</h3>
		<div class="blank-page widget-shadow scroll" id="style-2 div1">
			<section class="section_container booking_container">
				<div class="booking__nav">
					<span>Hasta Bilgileri</span>
				</div>
				<style>
					table {
						border-collapse: collapse;
						width: 100%;
						margin-top: 20px;
					}

					th, td {
						border: 1px solid #dddddd;
						text-align: left;
						padding: 8px;
					}

					th {
						background-color: #f2f2f2;
					}

					tr:nth-child(even) {
						background-color: #f9f9f9;
					}

					tr:hover {
						background-color: #e0e0e0;
					}
				</style>
				<table border="1">
					<thead>
						<tr>
							<td>Hasta No</td>
							<td>Hasta Adı</td>
							<td>Hasta Soyadı</td>
							<td>Hasta Cinsiyeti</td>
							<td>Hasta Kan Grubu</td>
							<td>Hasta Doğum Tarihi</td>
						</tr>
					</thead>
					<tbody>
						@if (Model != null)
						{
							@foreach (var hasta in Model)
							{
								<tr>
									<td>@hasta.Tc</td>
									<td>@hasta.HastalarAd</td>
									<td>@hasta.HastalarSoyad</td>
									<td>@hasta.HastalarCinsiyet</td>
									<td>@hasta.HastalarKanGrubu</td>
									<td>@hasta.HastalarDogumTarihi</td>
								</tr>
							}
						}
					</tbody>
				</table>
			</section>
		</div>
	</div>
</div>