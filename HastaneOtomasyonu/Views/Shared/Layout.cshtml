<!DOCTYPE HTML>
<html>
<head>
	<title>Diamond Hastanesi</title>
	<link href="~/hastane/css/style.css" rel="stylesheet" type="text/css" media="all" />
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<link href="~/hastane/css/default.css" rel="stylesheet" type="text/css" media="all" />
	<link href="~/hastane/css/nivo-slider.css" rel="stylesheet" type="text/css" media="all" />
	<link href='//fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
	<script src="~/hastane/js/jquery-1.9.0.min.js"></script>
	<script src="~/hastane/js/jquery.nivo.slider.js"></script>
	<script type="text/javascript">
		$(window).load(function () {
			$('#slider').nivoSlider();
		});
	</script>
</head>
<body>
	<div class="wrap">
		<div class="wrapper-box">
			<div class="header">
				<div class="header-top">
					<div class="logo">
						<a href="index.html"><img src="~/images/logo.png" style="width:25%;" alt="" /></a>
					</div>
					<style>
						.feedback-input {
							color: #000000;
							font-family: Helvetica, Arial, sans-serif;
							font-weight: 500;
							font-size: 18px;
							border-radius: 0;
							line-height: 22px;
							background-color: #a2cbff;
							padding: 13px 13px 13px 54px;
							margin-bottom: 10px;
							width: 100%;
							-webkit-box-sizing: border-box;
							-moz-box-sizing: border-box;
							box-sizing: border-box;
							border: 3px solid rgba(0,0,0,0);
						}

						textarea {
							width: 100%;
							height: 150px;
							line-height: 150%;
							resize: vertical;
						}



						#btn-login {
							display: block;
							width: 100%;
							height: 40px;
							margin-top: 2.0em;
							border-radius: 4px;
							background-color: #d9155c;
							color: #fff;
						}

						body {
							font-family: "Roboto", Helvetica, Arial, sans-serif;
							font-weight: 100;
							font-size: 13px;
							line-height: 30px;
							color: #888;
							background: #a2cbff;
						}

						#randevuAlButtonContainer {
							margin-top: 20px;
							text-align: right;
						}

						#randevuAlButton {
							background-color: #d9155c;
							color: white;
							border: none;
							padding: 10px 20px;
							border-radius: 40px;
							text-decoration: none;
							display: inline-block;
							font-size: 15px;
							cursor: pointer;
						}

						#girisYapButton {
							background-color: #d9155c;
							color: white;
							border: none;
							padding: 10px 20px;
							border-radius: 40px;
							text-decoration: none;
							display: inline-block;
							font-size: 15px;
							cursor: pointer;
						}

						#kayitOlButton {
							background-color: #d9155c;
							color: white;
							border: none;
							padding: 10px 20px;
							border-radius: 40px;
							text-decoration: none;
							display: inline-block;
							font-size: 15px;
							cursor: pointer;
						}

					</style>

					<div id="randevuAlButtonContainer">
						<p style="color:dodgerblue ; font-size: 18px; font-weight: bold;">Hoş Geldiniz, @ViewBag.username</p>
						@if (ViewBag.username != "")
						{
							<a id="kayitOlButton" href="@Url.Action("Index", "Home")">Çıkış Yap</a>
						}
						<script>
							function redirectToHomePage(page) {
								window.location.href = page;
							}
						</script>
						<a id="randevuAlButton" href="@Url.Action("Index", "Randevu")">Randevu Al</a>
					</div>
					<div class="clear"></div>
				</div>
				<div class="header-bottom">
					<div id="cssmenu">
						<ul>
							<li class="last">
								<a href="@Url.Action("IndexG", "Home")">
									<span>ANASAYFA</span>
								</a>
							</li>
							<li class="has-sub"><a href="@Url.Action("PoliklinikG", "Home")"><span>POLİKLİNİKLER</span></a></li>
							<li class="last"><a href="@Url.Action("IletisimG","Home")"><span>BİZE ULAŞIN</span></a></li>
						</ul>
					</div>

					<div class="clear"></div>
				</div>
			</div>
		
			<div class="main">
				<div>
					@RenderBody()
				</div>
				
				<div class="footer">
					<div class="copy">
						<p> © 2023 SAKARYA ÜNİVERSİTESİ | Design by İREM DEĞERLİ</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	
</body>
</html>