@model HastaneOtomasyonu.Models.KullaniciHesap
<!DOCTYPE HTML>
<html>
<head>
	<title>Diamond Hastanesi</title>
	<link href="~/hastane/css/style.css" rel="stylesheet" type="text/css" media="all" />
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<link href="~/hastane/css/default.css" rel="stylesheet" type="text/css" media="all" />
	<link href="~/hastane/css/nivo-slider.css" rel="stylesheet" type="text/css" media="all" />
	<link href='//fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
	<script src="~/hastane/js/jquery-1.9.0.min.js"></script>
	<script src="~/hastane/js/jquery.nivo.slider.js"></script>
	<script type="text/javascript">
		$(window).load(function () {
			$('#slider').nivoSlider();
		});
	</script>
</head>
<body>
	<div class="wrap">
		<div class="wrapper-box">
			<div class="header">
				<div class="header-top">
					<div class="logo">
						<a href="index.html"><img src="~/images/logo.png" style="width:25%;" alt="" /></a>
					</div>
					<style>
						body {
							font-family: "Roboto", Helvetica, Arial, sans-serif;
							font-weight: 100;
							font-size: 13px;
							line-height: 30px;
							color: #888;
							background: #a2cbff;
						}
						#randevuAlButtonContainer {
							margin-top: 20px;
							text-align: right;
						}

						#randevuAlButton {
							background-color: #d9155c; /* Açık mor arka plan rengi */
							color: white; /* Koyu mor metin rengi */
							border: none; /* Kenarlık olmaması */
							padding: 10px 20px; /* Buton içerisindeki içerikle arka plan arasındaki boşluklar */
							border-radius: 40px; /* Yuvarlak kenarlıklı buton */
							text-decoration: none; /* Link görünümündeki alt çizgiyi kaldırma */
							display: inline-block;
							font-size: 15px;
							cursor: pointer;
						}

						#girisYapButton {
							background-color: #d9155c; /* Açık mor arka plan rengi */
							color: white; /* Koyu mor metin rengi */
							border: none; /* Kenarlık olmaması */
							padding: 10px 20px; /* Buton içerisindeki içerikle arka plan arasındaki boşluklar */
							border-radius: 40px; /* Yuvarlak kenarlıklı buton */
							text-decoration: none; /* Link görünümündeki alt çizgiyi kaldırma */
							display: inline-block;
							font-size: 15px;
							cursor: pointer;
						}

						#kayitOlButton {
							background-color: #d9155c; /* Açık mor arka plan rengi */
							color: white; /* Koyu mor metin rengi */
							border: none; /* Kenarlık olmaması */
							padding: 10px 20px; /* Buton içerisindeki içerikle arka plan arasındaki boşluklar */
							border-radius: 40px; /* Yuvarlak kenarlıklı buton */
							text-decoration: none; /* Link görünümündeki alt çizgiyi kaldırma */
							display: inline-block;
							font-size: 15px;
							cursor: pointer;
						}
					</style>

					<div id="randevuAlButtonContainer">
						<a id="girisYapButton" href="@Url.Action("Login", "Giris")">Giriş Yap</a>
						<a id="randevuAlButton" href="@Url.Action("Randevu", "Randevu")">Randevu Al</a>
					</div>
					<div class="clear"></div>
				</div>
				<div class="header-bottom">
					<div id="cssmenu">
						<ul>
							<li class="active">
								<a href="@Url.Action("Index", "Home")">
									<span>ANASAYFA</span>
								</a>
							</li>
							<li class="has-sub"><a href="@Url.Action("Poliklinik", "Home")"><span>POLİKLİNİKLER</span></a></li>
							<li class="last"><a href="@Url.Action("Iletisim","Home")"><span>BİZE ULAŞIN</span></a></li>
						</ul>
					</div>

					<div class="clear"></div>
				</div>
			</div>

			<div class="main">

				<style>
					input {
						display: block;
						width: 80%;
						height: 30px;
						margin-top: 1.0em;
						padding: 4px;
					}

					.login-box {
						padding: 1em 1em 1em 1em;
						margin: auto;
						text-align: center;
						display: block;
						background-color: #6f92dc;
						/*border: 1px dashed white;*/
						width: 60%;
						height: auto;
					}

					.outer-box {
						display: block;
						margin: auto;
						background: #6f92dc;
						border-radius: 5px;
						width: 50%;
						height: 20em;
						height: auto;
					}

					#btn-login {
						display: block;
						width: 100%;
						height: 40px;
						margin-top: 2.0em;
						border-radius: 4px;
						background-color: #d9155c;
						color: #fff;
					}
				</style>

				<div class="outer-box">
					<div class="login-box">
						<center>
							<form action="Register" method="post" onsubmit="return validateForm()">
								<input type="text" placeholder="İsim" asp-for="FirstName" id="FirstName">
								<input type="text" placeholder="Soyisim" asp-for="LastName" id="LastName">
								<input type="email" placeholder="E-mail" asp-for="Email" id="Email">
								<input type="password" placeholder="Şifre" asp-for="Password" id="Password">
								<input type="password" placeholder="Şifre Onayla" asp-for="CPassword" id="CPassword">

								<button type="submit" id="btn-login">Kayıt Ol</button>
							</form>
							<div id="error-message" style="color: floralwhite;"></div>
						</center>
					</div>
				</div>

				<script>
					function validateForm() {
						var firstName = document.getElementById("FirstName").value;
						var lastName = document.getElementById("LastName").value;
						var email = document.getElementById("Email").value;
						var password = document.getElementById("Password").value;
						var cpassword = document.getElementById("CPassword").value;

						if (firstName === "" || lastName === "" || email === "" || password === "" || cpassword === "") {
							document.getElementById("error-message").innerHTML = "Lütfen tüm alanları doldurun.";
							return false;
						}

						if (password !== cpassword) {
							document.getElementById("error-message").innerHTML = "Şifreler eşleşmiyor.";
							return false;
						}

						return true;
					}
				</script>

				<br />
			</div>
				<div class="footer">
					<div class="copy">
						<p> © 2023 SAKARYA ÜNİVERSİTESİ | Design by İREM DEĞERLİ</p>
					</div>
				</div>
			</div>
		
		<div>
			@RenderBody()
		</div>
	</div>
</body>
</html>